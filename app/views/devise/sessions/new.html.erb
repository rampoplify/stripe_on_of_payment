<div class="container">
  <div class="row">
    <div class="col-sm-6 col-md-6">

    </div>
    <div class="register pull-right col-sm-6 col-md-6">
      <div class="header text-center">
        <h1>Sign In</h1>
        <span>Access your account.</span>
      </div>
      <hr />
      <div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="form-group clearfix row m-r-0">
          <%= f.label :email, class: 'col-sm-4 col-xl-4 col-md-4' %>
          <%= f.email_field :email, class: 'col-sm-8 col-xl-8 col-md-8' %>
        </div>

        <div class="form-group clearfix row m-r-0">
          <%= f.label :password, class: 'col-sm-4 col-xl-4 col-md-4' %>
          <%= f.password_field :password, autocomplete: "off", class: 'col-sm-8 col-xl-8 col-md-8' %>
        </div>
        <hr />
        <div class="actions">
          <%= f.submit "Log In", class: "btn btn-default btn-orange" %>
        </div>

        <div class="devise-links">
          <%= render "devise/shared/links" %>
        </div>
      <% end %>
    </div>
    </div>
  </div>
</div>

