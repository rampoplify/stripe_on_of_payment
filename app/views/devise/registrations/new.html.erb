<div class="container">
  <div class="row">
    <div class="col-sm-6 col-md-6">

    </div>
    <div class="register pull-right col-sm-6 col-md-6">
      <div class="header text-center">
        <h2>Sign up</h2>
        <span>Create your account.</span>
      </div>
      <hr />
      <div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <!-- <%#= render "devise/shared/error_messages", resource: resource %> -->
        <div class="form-group clearfix row m-r-0 m-b-30" style="position: relative;">
          <%= f.label :email, class: 'col-sm-4 col-xl-4 col-md-4' %>
          <%= f.email_field :email, class: 'col-sm-8 col-xl-8 col-md-8', required: true%>
        </div>
        <div class="form-group clearfix row m-r-0 m-b-30" style="position: relative;">
          <%= f.label :name, class: 'col-sm-4 col-xl-4 col-md-4' %>
          <%= f.text_field :name, class: 'col-sm-8 col-xl-8 col-md-8', required: true%>
        </div>
        <div class="form-group clearfix row m-r-0 m-b-30" style="position: relative;">
          <%= f.label :age, class: 'col-sm-4 col-xl-4 col-md-4' %>
          <%= f.number_field :age, class: 'col-sm-8 col-xl-8 col-md-8', required: true%>
        </div>
        <div class="form-group clearfix row m-r-0 m-b-30" style="position: relative;">
          <%= f.label :contact_number, class: 'col-sm-4 col-xl-4 col-md-4' %>
          <%= f.number_field :contact_number, class: 'col-sm-8 col-xl-8 col-md-8', required: true%>
        </div>
        <div class="form-group clearfix row m-r-0 m-b-30" style="position: relative;">
          <%= f.label :password, class: 'col-sm-4 col-xl-4 col-md-4' %>
          <%= f.password_field :password, autocomplete: "new-password", class: 'col-sm-8 col-xl-8 col-md-8', required: true%>
        </div>
        <div class="form-group clearfix row m-r-0 m-b-30" style="position: relative;">
          <%= f.label :password_confirmation, class: 'col-sm-4 col-xl-4 col-md-4' %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'col-sm-8 col-xl-8 col-md-8', required: true%>
        </div>
        <hr />
        <div class="actions">
          <%= f.submit "Sign In", class: "btn btn-default btn-orange" %>
        </div>

        <div class="devise-links">
          <%= render "devise/shared/links" %>
        </div>
      <% end %>
    </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $('.btn-default').on('click', function(){
    $('.new_user').validate({
      rules: {
        'users[email]':{ required:true },
        'users[name]':{ required:true },
        'users[age]':{ required:true },
        'users[contact_number]':{ required:true },
        'users[password]': { required:true },
        'users[password_confirmation]': { required:true }
      }
    });
  })
</script>
